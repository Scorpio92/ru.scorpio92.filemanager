<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="5"
        android:shape="ring"
        android:thicknessRatio="15"
        android:useLevel="false" >
        <size
            android:height="@dimen/circle_progressbar_width_height"
            android:width="@dimen/circle_progressbar_width_height" />

        <gradient
            android:centerColor="@color/blue_sky"
            android:centerY="0.50"
            android:endColor="@android:color/transparent"
            android:startColor="@color/scorpio_yellow"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>