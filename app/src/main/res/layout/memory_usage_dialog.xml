<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/memory_usage_table_layout"
    android:background="@color/grey">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_usage_mount_point"
            android:textSize="12sp"
            android:layout_column="0"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_usage_point_size"
            android:textSize="12sp"
            android:layout_column="1"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_usage_point_usage"
            android:textSize="12sp"
            android:layout_column="2"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_usage_available"
            android:textSize="12sp"
            android:layout_column="3"
            android:paddingLeft="10dp" />

    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_usage_point_no_info"
            android:id="@+id/memory_usage_point_no_info"
            android:textSize="12sp"
            android:visibility="invisible"
            android:paddingLeft="10dp" />

    </LinearLayout>

</TableLayout>